{
  "manifest_version": 3,
  "name": "Indra Scribe",
  "version": "0.1.0",
  "description": "Ambient telehealth transcription for Indra EHR",
  "minimum_chrome_version": "116",

  "permissions": [
    "tabCapture",
    "offscreen",
    "activeTab",
    "tabs",
    "storage"
  ],

  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://*.vercel.app/*"
    ]
  },

  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Indra Scribe"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
